---
interface Props {
  heading?: string;
}

const { heading = 'About' } = Astro.props;
---

<div class="max-w-[70ch]">
  <h2 class="text-gray-medium mb-3 text-2xl font-bold">{heading}</h2>
  <slot />
</div>

