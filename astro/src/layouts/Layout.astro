---
import Header from '@/components/Header.astro';
import { ViewTransitions } from 'astro:transitions';

import '../styles/app.css';
import Footer from '@/components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
}

const DEFAULT_DESCRIPTION = 'A simple blog built with Astro';

const { title: pageTitle, description } = Astro.props;

const title = `${pageTitle} | For The Records.`;
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description || DEFAULT_DESCRIPTION} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <!-- 100.1 to force scrollbar to show, preventing content shift -->
  <body class="flex min-h-[100.1vh] flex-col">
    <Header />
    <main class="container mb-20 flex-1 md:mb-28">
      <slot />
    </main>
    <Footer />
  </body>
</html>
