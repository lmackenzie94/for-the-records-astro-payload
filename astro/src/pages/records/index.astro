---
import Grid from '@/components/Grid.astro';
import GridHeading from '@/components/GridHeading.astro';
import Record from '@/components/Record.astro';
import Layout from '@/layouts/Layout.astro';
import { getRecords } from '@/utils/payload/record';

const records = await getRecords();
---

<Layout title="Records">
  <GridHeading heading="Records." />

  {
    records?.length ? (
      <Grid>
        {records.map((record) => (
          <Record record={record} />
        ))}
      </Grid>
    ) : (
      <p class="text-[#c5b5c9] mt-20">No records found.</p>
    )
  }
</Layout>
