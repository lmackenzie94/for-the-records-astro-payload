---
import Artist from '@/components/Artist.astro';
import Grid from '@/components/Grid.astro';
import GridHeading from '@/components/GridHeading.astro';
import Layout from '@/layouts/Layout.astro';
import { getArtists } from '@/utils/payload/artist';

const artists = await getArtists();
---

<Layout title="Artists">
  <GridHeading heading="Artists." />
  {
    artists?.length ? (
      <Grid>
        {artists.map((artist) => (
          <div>
            <Artist artist={artist} />
          </div>
        ))}
      </Grid>
    ) : (
      <p class="mt-20 text-[#c5b5c9]">No artists found.</p>
    )
  }
</Layout>
