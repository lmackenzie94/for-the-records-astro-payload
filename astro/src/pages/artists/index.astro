---
import Artist from '@/components/Artist.astro';
import Layout from '@/layouts/Layout.astro';
import { getArtists } from '@/utils/payload/artist';

const artists = await getArtists();
---

<Layout title="Artists">
  <h1
    class="relative z-10 -mb-[.3em] ml-2 text-6xl font-black text-[#dcdcdc] mix-blend-exclusion md:text-7xl"
  >
    Artists.
  </h1>

  {
    artists?.length ? (
      <section class="grid grid-cols-2 gap-x-6 gap-y-12 md:grid-cols-3 lg:grid-cols-4">
        {artists.map((artist) => (
          <Artist artist={artist} />
        ))}
      </section>
    ) : (
      <p class="text-[#dcdcdc]">No artists found.</p>
    )
  }
</Layout>
